{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Number of Railway Stations over Time",
  "data": {
    "url": "station_increase.csv",
    "format": {"type": "csv"}
  },
  "width": 600,
  "height": 300,
  "mark": {
    "type": "line",
    "point": {
      "filled": true,
      "fill": "#386641",
      "size": 80
    },
    "color": "#a7c957",
    "strokeWidth": 3
  },
  "encoding": {
    "x": {
      "field": "fiscal_year",
      "type": "ordinal",
      "title": "Fiscal Year",
      "axis": {
        "labelAngle": -45
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Number of Stations",
      "scale": {
        "zero": false
      }
    },
    "tooltip": [
      {"field": "fiscal_year", "title": "Year"},
      {"field": "value", "title": "Stations", "format": ","}
    ]
  }
}