{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "station_amount.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "yearSlider",
      "value": 1976,
      "bind": {
        "input": "range",
        "min": 1964,
        "max": 2014,
        "step": 1,
        "name": "Show data up to year: "
      }
    }
  ],
  "transform": [
    {"fold": ["Broad Gauge", "Metre Gauge", "Narrow Gauge"], "as": ["Gauge Type", "Stations"]},
    {"calculate": "parseInt(substring(datum.Year, 0, 4))", "as": "YearNum"},
    {"filter": "datum.YearNum <= yearSlider"}
  ],
  "layer": [
    {
      "mark": {"type": "area", "opacity": 0.7},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {"field": "Stations", "type": "quantitative", "title": "Number of Stations"},
        "color": {
          "field": "Gauge Type",
          "type": "nominal",
          "title": "Gauge Type",
          "scale": {
            "domain": ["Broad Gauge", "Metre Gauge", "Narrow Gauge"],
            "range": ["#386641", "#6a994e", "#a7c957"]
          }
        }
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 80, "opacity": 1},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"field": "Stations", "type": "quantitative"},
        "color": {
          "field": "Gauge Type",
          "type": "nominal",
          "title": "Gauge Type"
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Gauge Type", "type": "nominal", "title": "Gauge Type"},
          {"field": "Stations", "type": "quantitative", "title": "Stations", "format": ","}
        ]
      }
    }
  ],
  "title": {
    "text": "Change in Railway Gauge Types in India"
  }
}